<h2>Agregar un nuevo Turno</h2>

<%= link_to 'Volver al listado de turno', turnos_path %>

<%= form_with model: @turno do |form| %>

    <div>
        <%= form.label :sucursal %>
        <%= form.select "sucursal", @sucursales.map{ |su| ["#{su.nombre}", su.id] }, :multiple => true %>
    </div>
    
    <div>
        <%= form.hidden_field :cliente_id, value: @cliente_id%>
    </div>

    <div>
        <%= form.label :fecha %>
        <%= form.date_field :fecha%>
    </div>

    <div>
        <%= form.label :hora %>
        <%= form.time_field :hora%>
    </div>
    
    <div>
        <%= form.label :motivo %>
        <%= form.text_field :motivo%>
    </div>

    <div>
        <%= form.hidden_field :estado, value: "Pendiente"%>
    </div>


    <%= form.submit %>


<%end%>